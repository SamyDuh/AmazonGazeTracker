{
  "manifest_version": 3,
  "icons": { "16": "extension_icon.png"},
  "name": "Amazon Gaze Tracker",
  "version": "1.1",
  "description": "Tracks gaze data on Amazon product pages and logs product interactions.",
  "permissions": ["scripting", "activeTab", "storage"],
  "host_permissions": ["https://www.amazon.com/*"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.amazon.com/*"],
      "js": ["searchgazer.js", "content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "web_accessible_resources": [
    {
      "resources": ["searchgazer.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}