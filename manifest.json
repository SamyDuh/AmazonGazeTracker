{
  "manifest_version": 3,
  "name": "Amazon Gaze Tracker",
  "version": "1.1.0",
  "description": "Tracks gaze data on Amazon product pages and logs product interactions.",
  "permissions": ["scripting", "activeTab", "storage", "downloads"],
  "host_permissions": ["https://www.amazon.com/*"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.amazon.com/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "lib/eyegestures.js",
        "lib/eyegestures.min.js",
        "lib/eyegestures.browser.js",
        "lib/eyegestures-init.js",
        "lib/eyegestures-commands.js",
        "lib/calibration.js",
        "lib/fixation.js",
        "lib/ml.min.js"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}